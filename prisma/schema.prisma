generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(uuid())
  email         String           @unique
  passwordHash  String
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  instagramAccounts InstagramAccount[]
  insightSnapshots  InsightSnapshot[]
  contentDrafts     ContentDraft[]
  contacts          Contact[]
  reminders         Reminder[]
}

model InstagramAccount {
  id            String   @id @default(uuid())
  userId        String
  scope         String   @default("global") // e.g. global, west_africa, ghana
  igUserId      String
  igUserName    String?
  accessToken   String
  tokenExpiresAt DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@unique([userId, igUserId])
}

model InsightSnapshot {
  id            String   @id @default(uuid())
  userId        String
  followers     Int      @default(0)
  reach7d       Int      @default(0)
  impressions7d Int      @default(0)
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model ContentDraft {
  id          String   @id @default(uuid())
  userId      String
  title       String
  caption     String?
  hashtags    String?
  scheduledAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, scheduledAt])
}

model Contact {
  id        String   @id @default(uuid())
  userId    String
  name      String
  email     String?
  stage     String   @default("Contacted")
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, stage])
}

model Reminder {
  id        String   @id @default(uuid())
  userId    String
  title     String
  dueAt     DateTime
  done      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, dueAt])
}
